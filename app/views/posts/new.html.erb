<center>

  <h2>New Post</h2>
  <%= form_for @post, :as => :post, :url => posts_path do |form| %>
          
  <div class="form-group">
    <%= form.label :title, style: "display: block" %>
   
      <%= form.text_field :title%>
    
  </div>

  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
   
      <%= form.text_field :description%>
    
  </div>

  <div class="form-group">
	 <%= form.submit %>
	</div>
<% end %>
  <div class="form-group">

	<a href="<%= posts_path %>"><button type="button" class="btn btn-primary">Back to posts</button>
	</a>
	</div>
</center>


