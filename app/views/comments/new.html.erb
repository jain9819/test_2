<h2>New Comment</h2>
 <%= form_for @comment, :as => :comment, :url => create_comment_comment_index_path do |form| %>
          
	<div class="form-group">
  	<%= form.label :post_Id, style: "display: block" %>
    <%= form.text_field :post_id%>
  
  </div>

  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
   
      <%= form.text_field :description%>
    
  </div>

  <div class="form-group">
	 <%= form.submit %>
	</div>
<% end %>

<div class="form-group">
<a href="<%= index_comment_comment_index_path %>"><button type="button" class="btn btn-primary">Back to Comments</button></a>
</div>



