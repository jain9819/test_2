<h1>Edit this Comment</h1>



<%= form_for @comment, :as => :comment, :url => post_comment_path(@post, @comment) do |form| %>

<div class="form-group">
  <%= form.label :description, style: "display: block" %>
  <%= form.text_field :description%>
</div>

<div class="form-group">
  <%= form.submit %>
</div>
<% end %>



